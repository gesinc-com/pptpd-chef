# pptp 
-A INPUT -m state --state NEW -m tcp -p tcp --dport 1723 -j ACCEPT
-A INPUT -m state --state NEW -p 47 -j ACCEPT

*nat
:PREROUTING ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
-A POSTROUTING -s <%= node[:pptpd][:postrouting_source] %> -o <%= node[:pptpd][:postrouting_out_interface] %> -j MASQUERADE
